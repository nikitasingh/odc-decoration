    <th>Name</th>
    <th>Theme Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead> <tbody>
<% @tasks.each do |task| %>

  <tr>
    <td><%= task.name %></td>
<td>  <%= task.decoration_id %></td>
