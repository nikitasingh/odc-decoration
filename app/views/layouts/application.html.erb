<%= javascript_include_tag :defaults %>
<html>
<head>
  <title> Odcdecoration</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="wrapper">
<div class="header">
<div align="right">
  <h4><% if user_signed_in? %><%= link_to "Sign out", destroy_user_session_path, :method => :delete %><% end %></h4>
</div>
  <h2>
     <%= link_to image_tag("flower.png", :size => "60x60",:alt => "odc decoration"), root_url %> ODC Decoration Management
  </h2>

 <div class="signout" align="right" style="color:#ffffff">
    <% if user_signed_in? %>
