<center>
<h1>Listing users</h1></center>
<%= paginate @users %>
<table id="table_id"> 
<thead>
  <tr>
    <th>Email</th>
    <th>Username</th>
    <th>Role</th>
    <th></th>
    <th></th>
     <th></th>
  </tr>
</thead>
<tbody>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.username %></td>
        <td>

   <% user.roles.each do |role| %> <%=role.name%>  <% end %>
        </td>
      <td> <% if can? :update, @user %><%= link_to 'Show', user %><% end %></td>
      <td><% if can? :update, @user %>
<%= link_to 'Edit', edit_user_path(user) %>
<% end %></td>
    <td><% if can? :delete, @user %>   <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %><% end %></td>
    </tr>
  <% end %>
</tbody>
</table>

<br />

 <% if can? :create, @user %><%= link_to 'New user', new_user_path %> <% end %>